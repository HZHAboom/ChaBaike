<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_collection_web"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzh.chabaike.CollectionWebActivity">

    <RelativeLayout
        android:id="@+id/collectRela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#0f0">
        <TextView
            android:id="@+id/title"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/creat_time"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/web_source"
            android:textColor="#fff"
            android:layout_alignBottom="@id/creat_time"
            android:layout_toRightOf="@id/creat_time"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <WebView
        android:id="@+id/webView"
        android:layout_below="@id/collectRela"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
</RelativeLayout>
